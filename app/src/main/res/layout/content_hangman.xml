<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_hangman"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.quizology.activity.HangmanActivity"
    tools:showIn="@layout/activity_hangman">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_xxxxlargest"
            android:layout_marginLeft="@dimen/margin_xxxxlargest"
            android:layout_marginTop="@dimen/margin_medium_small"
            android:src="@drawable/hangman0"
            android:elevation="10dp"/>

        <com.example.quizology.custom.CustomTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Who is the president of USA?"
            app:custom_font="avenir_light"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_marginTop="@dimen/margin_x1largest"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="10dp"
            app:cardCornerRadius="10dp"
            android:layout_marginRight="@dimen/margin_xxx1largest"
            android:layout_marginLeft="@dimen/margin_xxx1largest"
            android:layout_marginTop="@dimen/margin_small">

            <com.example.quizology.custom.CustomEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Answer"
                android:maxLines="1"
                android:layout_gravity="center"
                app:custom_font="avenir_light"
                android:textColor="@android:color/black" />

        </android.support.v7.widget.CardView>

        <com.example.quizology.custom.CustomButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Submit"
            android:background="@drawable/item_main_button_shape"
            android:textColor="@android:color/black"
            app:custom_font="avenir_light"
            android:layout_marginTop="@dimen/margin_medium_large"/>

    </LinearLayout>

</RelativeLayout>
